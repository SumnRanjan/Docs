<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/css/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full h-full bg-teal-950 px-10 py-20 text-white">
      <a class="m-10 text-blue-400" href="/">Back To Home</a>
      <h1 class="text-4xl font-bold py-10">All Users</h1>

      <div class="flex gap-5 flex-wrap">
        <% if(users.length > 0){ %>
          <% users.forEach((user)=>{ %>
            <div class="w-52 p-2 bg-teal-800 rounded-lg">
              <div class="w-full h-60 bg-teal-950 rounded-lg">
                <img class="w-full h-full object-cover" src="<%=user.image  %>" alt="">
              </div>
              <h2 class="text-xl mt-3"><%= user.name %></h2>
              <h2 class="text-zinc-400 w-full"><%= user.email %></h2>
              <div class="flex mt-5 justify-between">
                <a class="text-sky-300 " href="/edit/<%= user._id %>">Edit</a>
                <a class="text-red-500" href="/delete/<%= user._id %>">Delete</a>
              </div>
            </div>
          <%  }) %>
          <% } else { %>
            <h2 class="text-xl text-zinc-400">No User Register....</h2>
            <% } %>

      </div>
    </div>
  </body>
</html>
